<article class="post">
  <div class="title">
  
    <div class="row bg-info text-white"><h5 class="pl-2 pt-2">{{title}}</h5></div>
      <p>{{content}}</p>
    </div>
  <div class="meta">
  {{user.username}} on {{format_date created_at}}
  |
  <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
</div>
</article>